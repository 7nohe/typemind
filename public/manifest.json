{
  "manifest_version": 3,
  "name": "typemind",
  "version": "0.1.0",
  "description": "Privacy-first text completion using Chrome's built-in AI (Gemini Nano)",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "AI Completion",
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "options_ui": {
    "page": "src/popup/index.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/style.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
